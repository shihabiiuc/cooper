---
import Layout from '~/layouts/Layout.astro';
import ContentSection from '~/components/sections/ContentSection.astro';
import FeaturesList from '~/components/sections/FeaturesList.astro';
import TeamSection from '~/components/sections/TeamSection.astro';
import FeatureItem from '~/components/ui/FeatureItem.astro';
import TeamMember from '~/components/ui/TeamMember.astro';
import PageHeader from '~/components/layout/PageHeader.astro';
import { Zap, Shield, Smartphone, Globe, Code, Layers } from 'lucide-react';
import { languages } from '~/i18n/ui';
import { useTranslations } from '~/i18n/utils';

import cooperImage from '~/assets/blog/interstellar-cooper.png';
import brandImage from '~/assets/blog/interstellar-brand.png';
import murphyImage from '~/assets/blog/interstellar-murphy.png';
import tarsImage from '~/assets/blog/interstellar-tars-illustration.png';
import storyImage from '~/assets/blog/interstellar-story.png';

import Timeline from '~/components/sections/Timeline.astro';
import Section from '~/components/layout/Section.astro';
import Container from '~/components/ui/Container.astro';
import Heading from '~/components/ui/Heading.astro';
import Text from '~/components/ui/Text.astro';

export async function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang);

const timelineItems = [
    { date: t['about.timeline.1.date'], title: t['about.timeline.1.title'], description: t['about.timeline.1.desc'] },
    { date: t['about.timeline.2.date'], title: t['about.timeline.2.title'], description: t['about.timeline.2.desc'] },
    { date: t['about.timeline.3.date'], title: t['about.timeline.3.title'], description: t['about.timeline.3.desc'] },
    { date: t['about.timeline.4.date'], title: t['about.timeline.4.title'], description: t['about.timeline.4.desc'] },
];
---

<Layout title="About Us - Astro Boilerplate" description="Learn about our mission and team.">
<PageHeader title={t['about.title']} description={t['about.mission']} />

  <ContentSection
    title={t['about.story.title']}
    image={storyImage}
    imageAlt="Endurance spaceship approaching a wormhole"
  >
    <Text>{t['about.story.p1']}</Text>
    <Text>{t['about.story.p2']}</Text>
    <Text>{t['about.story.p3']}</Text>
  </ContentSection>

  <Container class="py-24">
    <Heading level={2} class="text-center mb-12">{t['about.timeline.title']}</Heading>
    <Timeline items={timelineItems} />
  </Container>

  <Section>
      <Container>
          <div class="mb-24">
             <Heading level={2} class="text-center mb-12">{t['about.why.title']}</Heading>
             <FeaturesList>
                <FeatureItem title={t['about.feat.fast']} description={t['about.feat.fast.desc']}>
                    <Zap slot="icon" className="w-6 h-6" />
                </FeatureItem>
                <FeatureItem title={t['about.feat.secure']} description={t['about.feat.secure.desc']}>
                    <Shield slot="icon" className="w-6 h-6" />
                </FeatureItem>
                <FeatureItem title={t['about.feat.responsive']} description={t['about.feat.responsive.desc']}>
                    <Smartphone slot="icon" className="w-6 h-6" />
                </FeatureItem>
                <FeatureItem title={t['about.feat.seo']} description={t['about.feat.seo.desc']}>
                    <Globe slot="icon" className="w-6 h-6" />
                </FeatureItem>
                <FeatureItem title={t['about.feat.dev']} description={t['about.feat.dev.desc']}>
                    <Code slot="icon" className="w-6 h-6" />
                </FeatureItem>
                <FeatureItem title={t['about.feat.comp']} description={t['about.feat.comp.desc']}>
                    <Layers slot="icon" className="w-6 h-6" />
                </FeatureItem>
             </FeaturesList>
          </div>

          <div>
            <TeamSection title={t['about.team.title']}>
              <TeamMember
                name={t['about.team.cooper.name']}
                role={t['about.team.cooper.role']}
                image={cooperImage}
                github="https://github.com/gladtek"
                linkedin="https://linkedin.com/company/gladtek"
              />
              <TeamMember
                name={t['about.team.brand.name']}
                role={t['about.team.brand.role']}
                image={brandImage}
                twitter="https://github.com/gladtek"
                linkedin="https://linkedin.com/company/gladtek"
              />
              <TeamMember
                name={t['about.team.murphy.name']}
                role={t['about.team.murphy.role']}
                image={murphyImage}
                linkedin="https://linkedin.com/company/gladtek"
              />
              <TeamMember
                name={t['about.team.tars.name']}
                role={t['about.team.tars.role']}
                image={tarsImage}
                github="https://github.com/gladtek"
              />
            </TeamSection>
          </div>
      </Container>
  </Section>
</Layout>
