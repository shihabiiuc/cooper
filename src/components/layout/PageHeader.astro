---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<div class="pt-24 pb-12 text-center relative overflow-hidden">
  <div class="absolute inset-0 z-0 flex items-center justify-center opacity-20 pointer-events-none">
      <div class="w-[800px] h-[800px] bg-indigo-500/20 rounded-full blur-[120px]"></div>
  </div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-6">
    <h1 class="text-5xl md:text-7xl font-display font-bold mb-6" set:html={title} />
    {description && (
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        {description}
      </p>
    )}
  </div>
</div>
