---
interface Props {
  title: string;
  features: string[];
  terminal: {
    comment: string;
    command: {
      tool: string;
      args: string;
    };
    successSteps: string[];
    readyMessage: string;
  };
}

const { title, features, terminal } = Astro.props;
---
<div class="mt-24 p-12 rounded-[40px] bg-linear-to-br from-primary/10 via-background to-background border border-primary/20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
            <h2 class="text-3xl font-bold mb-6">{title}</h2>
            <ul class="space-y-4">
                {features.map(item => (
                    <li class="flex items-center gap-3 text-foreground/70">
                        <div class="w-1.5 h-1.5 rounded-full bg-primary"></div>
                        {item}
                    </li>
                ))}
            </ul>
        </div>
        <div class="bg-black/40 rounded-2xl border border-white/5 p-6 font-mono text-sm overflow-hidden">
            <div class="flex gap-2 mb-4">
                <div class="w-3 h-3 rounded-full bg-red-500/50"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500/50"></div>
                <div class="w-3 h-3 rounded-full bg-green-500/50"></div>
            </div>
            <div class="text-blue-400"># {terminal.comment}</div>
            <div class="text-purple-400">{terminal.command.tool}</div> <span class="text-foreground">{terminal.command.args}</span>
            {terminal.successSteps.map(step => (
                 <div class="text-emerald-400">âœ“ {step}</div>
            ))}
            <div class="mt-4 text-primary animate-pulse">{terminal.readyMessage} _</div>
        </div>
    </div>
</div>
