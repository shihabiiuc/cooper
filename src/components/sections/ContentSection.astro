---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  image: string | ImageMetadata;
  imageAlt?: string;
  imagePosition?: 'left' | 'right';
  id?: string;
  reverse?: boolean; // deprecated, use imagePosition
}

const { title, image, imageAlt = "Section image", imagePosition = 'right', id, reverse } = Astro.props;

// Handle legacy reverse prop or map position to class
const isImageRight = imagePosition === 'right' && !reverse;
---

<section class="py-24" id={id}>
  <div class="max-w-7xl mx-auto px-6">
    <div class:list={[
      "grid grid-cols-1 md:grid-cols-2 gap-16 items-center",
      // If image is on the left, we switch the order on desktop
      !isImageRight ? "md:grid-flow-dense" : ""
    ]}>
      <div class:list={[
        // If image is left, content should be second (col-start-2)
        !isImageRight ? "md:col-start-2" : ""
      ]}>
        <h2 class="text-3xl font-display font-bold mb-6">{title}</h2>
        <div class="space-y-4 text-muted-foreground">
          <slot />
        </div>
      </div>
      <div class:list={[
        "relative rounded-3xl overflow-hidden border border-white/10 shadow-2xl",
        // If image is left, it should be first
        !isImageRight ? "md:col-start-1" : ""
      ]}>
        {typeof image === 'string' ? (
          <img 
            src={image} 
            alt={imageAlt} 
            class="w-full h-full object-cover aspect-video md:aspect-auto"
          />
        ) : (
          <Image 
            src={image} 
            alt={imageAlt} 
            class="w-full h-full object-cover aspect-video md:aspect-auto"
          />
        )}
      </div>
    </div>
  </div>
</section>
