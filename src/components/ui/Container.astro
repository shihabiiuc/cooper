---
import { twMerge } from 'tailwind-merge';
import clsx from 'clsx';

interface Props {
  class?: string;
  id?: string;
  as?: string;
}

const { class: className, id, as: Tag = 'div' } = Astro.props;
---

<Tag id={id} class={twMerge(clsx("max-w-7xl mx-auto px-6", className))}>
  <slot />
</Tag>
