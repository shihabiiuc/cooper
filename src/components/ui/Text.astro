---
import { twMerge } from 'tailwind-merge';
import clsx from 'clsx';

interface Props {
  variant?: 'default' | 'muted' | 'lead' | 'large' | 'small';
  class?: string;
  as?: string;
}

const { variant = 'default', class: className, as: Tag = 'p' } = Astro.props;

const styles = {
  default: "leading-7",
  muted: "text-muted-foreground",
  lead: "text-xl text-muted-foreground",
  large: "text-lg font-semibold",
  small: "text-sm text-muted-foreground leading-none",
};
---

<Tag class={twMerge(clsx(styles[variant as keyof typeof styles], className))}>
  <slot />
</Tag>
