---
import { twMerge } from 'tailwind-merge';
import clsx from 'clsx';

interface Props {
  as?: string;
  href?: string;
  class?: string;
  [key: string]: any;
}

const { as, href, class: className, ...rest } = Astro.props;

const Tag = as || (href ? 'a' : 'div');
---

<Tag
  href={href}
  class={twMerge(
    clsx(
      "block p-6 rounded-2xl border border-black/5 dark:border-white/10 bg-black/5 dark:bg-white/5 transition-all duration-300",
      href && "hover:border-primary/20 hover:shadow-2xl hover:shadow-primary/10 hover:-translate-y-1 cursor-pointer group",
      className
    )
  )}
  {...rest}
>
  <slot />
</Tag>
