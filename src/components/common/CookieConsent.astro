---
import { Cookie, X } from 'lucide-react';
import { ui, defaultLang } from '~/i18n/ui';
import { isRtl, useTranslations } from '~/i18n/utils';

const { lang = defaultLang } = Astro.params;
const t = useTranslations(lang);

const positionClasses = isRtl(lang)
  ? 'md:right-6 md:left-auto' // RTL: Right
  : 'md:left-6 md:right-auto'; // LTR: Left
---

<div id="cookie-consent" class={`fixed bottom-6 left-6 right-6 md:w-[400px] z-50 p-6 rounded-2xl bg-background/80 backdrop-blur-xl border border-foreground/10 shadow-2xl opacity-0 translate-y-12 pointer-events-none transition-all duration-500 ease-out ${positionClasses}`} role="alert" dir={isRtl(lang) ? 'rtl' : 'ltr'}>
  <div class="flex items-start gap-4">
    <div class="p-3 rounded-full bg-primary/10 text-primary shrink-0">
      <Cookie className="w-6 h-6" />
    </div>
    <div class="flex-1">
      <h3 class="text-lg font-bold mb-2">{t['cookie.title']}</h3>
      <p class="text-sm text-foreground/70 mb-4 leading-relaxed">
        {t['cookie.description']}
      </p>
      <div class="flex gap-3">
        <button
          id="cookie-accept"
          class="px-6 py-2.5 bg-primary text-white text-sm font-bold rounded-full hover:scale-105 transition-transform"
        >
          {t['cookie.accept']}
        </button>
        <button
          id="cookie-decline"
          class="px-6 py-2.5 bg-foreground/5 text-foreground text-sm font-bold rounded-full border border-foreground/10 hover:bg-foreground/10 transition-colors"
        >
          {t['cookie.decline']}
        </button>
      </div>
    </div>
    <button
      id="cookie-close"
      class="text-foreground/70 hover:text-foreground transition-colors p-1"
      aria-label="Close cookie banner"
    >
      <X className="w-5 h-5" />
    </button>
  </div>
</div>

<script>
  function initCookieConsent() {
    const banner = document.getElementById('cookie-consent');
    const acceptBtn = document.getElementById('cookie-accept');
    const declineBtn = document.getElementById('cookie-decline');
    const closeBtn = document.getElementById('cookie-close');

    if (!banner || !acceptBtn || !declineBtn || !closeBtn) return;

    const showBanner = () => {
        banner.classList.remove('opacity-0', 'translate-y-12', 'pointer-events-none');
        banner.classList.add('opacity-100', 'translate-y-0');
    };

    const hideBanner = () => {
        banner.classList.remove('opacity-100', 'translate-y-0');
        banner.classList.add('opacity-0', 'translate-y-12', 'pointer-events-none');
    };

    // Check local storage
    const consent = localStorage.getItem('cookie_consent');
    if (!consent) {
        setTimeout(showBanner, 1000);
    }

    acceptBtn.addEventListener('click', () => {
        localStorage.setItem('cookie_consent', 'accepted');
        window.dispatchEvent(new CustomEvent('consent:granted'));
        hideBanner();
    });

    declineBtn.addEventListener('click', () => {
        localStorage.setItem('cookie_consent', 'declined');
        hideBanner();
    });

    closeBtn.addEventListener('click', () => {
        localStorage.setItem('cookie_consent', 'declined');
        hideBanner();
    });
  }

  // Run on initial load
  initCookieConsent();

  // Run on view transitions navigation
  document.addEventListener('astro:page-load', initCookieConsent);
</script>
